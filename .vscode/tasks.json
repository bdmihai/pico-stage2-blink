{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "list-usb",
            "type": "shell",
            "command": "./.vscode/list-usb.sh",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "make -j 20",
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "clear": false,
                "showReuseMessage": false
            },
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "make; make flash",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": ["$gcc"]
        }
    ]
}
